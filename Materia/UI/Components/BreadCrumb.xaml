<UserControl x:Class="Materia.UI.Components.BreadCrumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="800" MouseDown="UserControl_MouseDown">
    <Grid Height="32" Margin="10,0,0,0">
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="CrumbName" Foreground="LightGray" Text="Sample" VerticalAlignment="Center" FontSize="16" />
            <Image Stretch="UniformToFill" Source="/Materia;component/Images/chevron_right.png" />
        </StackPanel>
    </Grid>
</UserControl>
